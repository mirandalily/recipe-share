<%= f.fields_for :ingredients do |ff| %>
  <div>
    <%= ff.label :name %>
    <%= ff.text_field :name %>

    <%= ff.label :quantity %>
    <%= ff.text_field :quantity, value: "#{ff.object.quantity_for_recipe(f.object.id)}" %>
    <%= link_to "delete", [f.object, ff.object], method: :delete,%>
  </div>
<% end %>
