<div class='main-content'>
  <div class='show-title-image'>
    <h3><%= @recipe.title%></h2>
    <%= image_tag @recipe.image.url(:medium), class: "recipe_image" %>
  </div>

  <div class='show-categories'>
    <h3>Categories:</h3><%= @recipe.categories.each do |category| %>
      <%= link_to category.title, category_path(category) %>
    <% end %>
  </div>
  <br />

  <div class='show-description'>
    <h3>Description:</h3>
    <p>
      <%= @recipe.description %>
    </p>
  </div>

  <div class='show-ingredients-directions'>

    <div class='show-ingredients'>
      <h3>Ingredients</h3>
      <ul>
        <% @recipe.ingredients.each do |ingredient| %>
          <li>
            <%= ingredient.name %>
          </li>
        <% end %>
      </ul>
    </div>

    <br />

    <div class='show-directions'>
      <h3>Directions</h3>
      <ul>
        <% @recipe.directions.each do |direction| %>
          <li>
            <%= direction.step %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class='show-links'>
    <%= link_to "Back", root_path, class: "btn btn-default" %>
    <% if current_user == @recipe.user %>
      <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default" %>
      <%= link_to "Delete", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
    <% end %>
  </div>
  <br />
  <br />
  <h3>Leave a comment: </h3>
  <br />

  <%=form_for [@user, @recipe, @comment] do |f| %>
  <%= render partial: "comments/comments_form", locals: {f: f} %>
<% end %>
  <br />
  <br />
  <%= render partial: "comments/comments_display", locals: {user: @user,recipe: @recipe} %>


</div>
